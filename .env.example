# ===========================================
# CARDSTACK CONFIGURATION
# ===========================================
# Copy this file to .env and customize values

# ----- Site Identity -----
SITE_NAME="Cardstack"
SITE_TAGLINE="A flat-file kanban board"
SITE_URL=""

# Emoji displayed next to site name when no logo image is set
SITE_EMOJI="ðŸ“‹"

# Base URL of the application (no trailing slash)
# SITE_URL is preferred, APP_URL supported for backwards compatibility
APP_URL="http://localhost:8000"

# ----- Security -----
# Admin password (required for admin features)
ADMIN_PASSWORD="changeme"

# ----- Storage -----
# Path to data storage directory (relative to project root)
DATA_PATH="./data"

# ----- Branding - Logo -----
# Logo URL (leave empty for emoji-based header)
# Recommended: PNG or SVG, height ~24-32px
LOGO_URL=""

# Width constraint for logo (CSS value, pixels)
LOGO_WIDTH="120"

# ----- Branding - Favicon -----
# Favicon URL (leave empty for emoji-based favicon)
FAVICON_URL=""

# Use a specific emoji as favicon (overrides SITE_EMOJI for favicon only)
FAVICON_EMOJI=""

# Custom letter to overlay on favicon (default: first letter of SITE_NAME)
FAVICON_LETTER=""

# Show letter overlay on favicon (true/false)
FAVICON_SHOW_LETTER=true

# ----- Features -----
# Enable dark mode support (true/false)
FEATURE_DARK_MODE=true
